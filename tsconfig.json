{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",

		"outDir": "./dist",
		"rootDir": "./src",

		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
