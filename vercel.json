{
	"version": 2,
	"builds": [
		{
			"src": "src/server.ts",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["dist/routes/**", "dist/controllers/**"]
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "src/server.ts"
		},
		{
			"src": "/",
			"dest": "src/server.ts"
		}
	],
	"env": {
		"NODE_ENV": "production"
	}
}
