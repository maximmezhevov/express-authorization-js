{
	"version": 2,
	"builds": [
		{
			"src": "src/server.ts",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["dist/**/*.js", "node_modules/swagger-ui-dist/**"]
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "src/server.ts",
			"methods": ["GET", "POST", "PUT", "DELETE"]
		},
		{
			"src": "/swagger-assets/(.*)",
			"dest": "src/server.ts"
		},
		{
			"src": "/(.*)",
			"dest": "src/server.ts"
		}
	]
}
